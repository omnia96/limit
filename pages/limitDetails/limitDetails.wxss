.container{
    width: 100vw;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.header{
    position: fixed;
    width: 88vw;
    height: 60vw;
    padding: 1vw;
    /* background-color: aqua; */
    border-radius: 1vw;
    box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
}
.placeholder{
    height: 64vw;
}
.content{
    width: 90vw;
    border-radius: 1vw;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
}
.content-item{
    width: 80vw;
    margin-top: 1vw;
    margin-bottom: 1vw;
}
.title{
    font-size: 16px;
    height: 10vw;
    display: flex;
    align-items: center;
}
.subtitle{
    font-size: 14px;
    color: #555555;
}